<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout tools:context=".signin" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:weightSum="5">


        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" tools:layout_editor_absoluteY="-1dp" tools:layout_editor_absoluteX="0dp" android:background="#0090FF" android:layout_weight="1">


            <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center" android:layout_marginTop="30dp">

                <ImageView android:layout_height="80dp" android:layout_width="80dp" android:background="@drawable/bgsign" android:gravity="center" android:src="@drawable/imgsign" android:elevation="10dp"/>

            </LinearLayout>

            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="25sp" android:textColor="#fff" android:text="" android:layout_gravity="center" android:id="@+id/textView1"/>

            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center" android:textSize="25sp" android:textColor="#fff" android:text="Phước Duy" android:layout_gravity="center" android:id="@+id/textView2"/>

            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15sp" android:textColor="#fff" android:text="1811505310212" android:layout_gravity="center" android:id="@+id/textView3"/>

        </LinearLayout>

        <ImageView android:layout_height="50dp" android:layout_width="match_parent" tools:layout_editor_absoluteY="200dp" tools:layout_editor_absoluteX="-16dp" android:background="@drawable/ic_wave"/>


        <LinearLayout android:layout_height="wrap_content" android:layout_width="320dp" android:orientation="vertical" android:layout_weight="2" android:layout_gravity="center">


            <com.google.android.material.textfield.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/textField" android:hint="Username">

                <com.google.android.material.textfield.TextInputEditText android:layout_height="wrap_content" android:layout_width="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/textField" android:hint="Password">

                <com.google.android.material.textfield.TextInputEditText android:layout_height="wrap_content" android:layout_width="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="end" android:layout_marginVertical="10dp">

                <CheckBox android:layout_height="wrap_content" android:layout_width="160dp" android:textColor="#929296" android:text="Remember me" android:id="@+id/checkBox2"/>

                <TextView android:layout_height="wrap_content" android:layout_width="160dp" android:gravity="end" android:textSize="15sp" android:textColor="#929296" android:text="Forgot Password" android:id="@+id/forgetpass"/>

            </LinearLayout>

            <Button android:layout_height="40dp" android:layout_width="match_parent" android:background="@drawable/buttonsign" android:layout_marginTop="5dp" android:elevation="20dp" android:textColor="#fff" android:text="Sign in" android:layout_gravity="center_horizontal" android:textStyle="bold"/>


            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="end" android:layout_marginVertical="15dp">

                <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center" android:textSize="15sp" android:textColor="#929296" android:text="Dont't have an account?" android:id="@+id/textView4"/>

                <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center" android:textSize="15sp" android:textColor="#0090FF" android:text="Sign up" android:id="@+id/signup" android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:background="#0090FF" android:layout_weight="1" android:gravity="center">


            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content">

                <ImageView android:layout_height="30dp" android:layout_width="30dp" android:background="@drawable/bgicon" android:src="@drawable/ic_facebookk" android:padding="5dp"/>

                <ImageView android:layout_height="30dp" android:layout_width="30dp" android:background="@drawable/bgicon" android:src="@drawable/ic_google" android:padding="5dp" android:layout_marginHorizontal="20dp"/>

                <ImageView android:layout_height="30dp" android:layout_width="30dp" android:background="@drawable/bgicon" android:src="@drawable/ic_twitter" android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView android:layout_height="50dp" android:layout_width="match_parent" android:background="#fff" android:layout_weight="1" android:id="@+id/main_nav" app:menu="@menu/a" android:layout_alignParentBottom="true"> </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>